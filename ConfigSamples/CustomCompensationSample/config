# Custom Compensation Strategy Configuration Sample
# This shows how to configure the custom compensation strategy

# Enable ZProbe module
zprobe.enable                           true
zprobe.probe_pin                        2.6v
zprobe.slow_feedrate                     5
zprobe.fast_feedrate                     100
zprobe.return_feedrate                   5
zprobe.probe_height                      5

# Enable the custom compensation strategy
leveling-strategy.flex-compensation.enable         true

# Grid size configuration
leveling-strategy.flex-compensation.grid_x_size    30

# Bed dimensions (in mm)
leveling-strategy.flex-compensation.x_size         300

# Probe offsets from nozzle (x,y,z in mm)
leveling-strategy.flex-compensation.probe_offsets  0,0,0

# Initial height for probing (absolute Z position)
leveling-strategy.flex-compensation.initial_height 10

# Tolerance for probing (mm)
leveling-strategy.flex-compensation.tolerance      0.03

# Whether to home before probing
leveling-strategy.flex-compensation.do_home        true

# Human readable output format
leveling-strategy.flex-compensation.human_readable  true

# Before/after probe gcode (replace _ with space)
leveling-strategy.flex-compensation.before_probe_gcode M280
leveling-strategy.flex-compensation.after_probe_gcode M281

# Save compensation data automatically
leveling-strategy.flex-compensation.save           true 